SKIP : { " "|"\r"|"\t"|"\n"|"\f" }

TOKEN: { < #LETTER_OR_UNDERSCORE: (["a"-"z", "A"-"Z", "_"])+ > }
TOKEN: { < #LETTERS_OR_DIGITS_OR_UNDERSCORES: (["a"-"z", "A"-"Z", "0"-"9", "_"])+ > }
TOKEN: { < #DIGIT: ["0"-"9"] > }



TOKEN: 
{ 
  < LBRACE: "{" > 
| < RBRACE: "}" >
| < GT: ">" >
| < LT: "<" >
| < SEMICOLON: ";" > 
| < COMMA: "," >
| < APOSTROPHE: "\""> 
}

TOKEN: { < NUMBER: (<DIGIT>)+ > }
TOKEN: { < STRING :
      "\""
      (   (~["\"","\\","\n","\r"])
        | ("\\"
            ( ["n","t","b","r","f","\\","'","\""]
            | ["0"-"7"] ( ["0"-"7"] )?
            | ["0"-"3"] ["0"-"7"] ["0"-"7"]
            )
          )
      )*
      "\""
  	>
  }

