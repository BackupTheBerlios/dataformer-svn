Statement BlockStatement():
{
	Expression expr;
	Statement statement;
}

{
 LOOKAHEAD( Modifiers() Type() <IDENTIFIER> )
  expr = LocalVariableDeclaration() ";"
  { return new ExpressionStatement(expr.getLine(),expr.getColumn(),expr); }
|
