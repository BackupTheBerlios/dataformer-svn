public class GraphParser {
	/* 
	 * Utility method to add items into list
	 * Also features lazy allocation
	 */
	private List add(List list, Object obj) {
		if (list == null) {
			list = new LinkedList();
    	}
    	list.add(obj);
    	return list;
    }
	
}
