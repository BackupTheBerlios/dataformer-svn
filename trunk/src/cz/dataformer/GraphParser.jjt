VariableDeclarator VariableDeclarator():
{
	VariableDeclaratorId id;
	Expression init = null;	
}
{
  id = VariableDeclaratorId() [ "=" init = VariableInitializer() ]
  { return new VariableDeclarator(id.getLine(), id.getColumn(), id, init); }
